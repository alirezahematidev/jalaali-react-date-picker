{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "checkJs": false,
    "outDir": "lib",
    "rootDir": "src",
    "typeRoots": ["lib/index.d.ts", "@types"],
    "baseUrl": "."
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "rootDir": "src",
      "outDir": "lib",
      "declaration": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "declarationMap": true,
      "jsx": "react-jsx"
    }
  },
  "include": ["src", "src/custom.d.ts"],
  "exclude": ["node_modules", "lib", "src/stories"]
}
